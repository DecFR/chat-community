{
  "name": "chat-community",
  "version": "1.0.0",
  "private": true,
  "description": "全栈实时聊天平台 - Chat & Community",
  "scripts": {
    "setup:db": "pnpm -F @chat-community/api prisma:generate && pnpm -F @chat-community/api prisma:migrate",
    "dev": "pnpm run setup:db && pnpm --parallel -r dev",
    "build": "pnpm -r build",
    "install:all": "pnpm install && pnpm -r install"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "bcrypt": "^6.0.0"
  }
}
